<h1>Edit DevTool</h1>
<div class="row">
  <form action="/devtools/{{devtools.id}}?_method=PUT" method="post" class="col s12">
  <input type="hidden" name="_method" value="PUT">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title" value="{{devtools.title}}">
        <label for="title">Title</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <select name="status">
          {{#select devtools.status}}
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          {{/select}}
        </select>
        <label for="status">Status</label>
      </div>
    </div>
    <div class="row">
      <p>
        <input type="checkbox" name="allowComments" id="filled-in-box" {{#if devtools.allowComments}}checked="checked" {{/if}}>
        <label for="filled-in-box">Allow Comments</label>
      </p>
    </div>
    <div class="row">
      <div class="input-field">
        <h5>Tell us about your DevTool:</h5>
        <textarea name="body">{{devtools.body}}</textarea>
      </div>
    </div>

    <input type="submit" value="Save" class="btn">
  </form>
</div>