<h1>DevTools</h1>
<div class="row">
  {{#each devtools}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          {{#if user}}
            {{{editIcon user.id ../user.id id}}}
          {{/if}}
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <p class="devtool-text">{{stripTags (truncate body 50)}}</p>
          <br>
          <div class="chip">
            <img src="{{user.image}}">
            <a href="/devtools/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a class="btn grey" href="/devtools/show/{{id}}">Read More</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No devtools found</p>
  {{/each}}
</div>
