<h1>Public DevTools</h1>
<div class="row">
  {{#each devtools}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <a href="/devtools/edit/{{id}}" class="btn-floating halfway-fab waves-effect waves-light red tooltipped" data-position="left" data-tooltip="Edit"><i class="fas fa-pencil-alt fa-lg"></i></a>
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <p class="devtool-text">{{stripTags (truncate body 50)}}</p>
          <br>
          <div class="chip">
            <img src="{{user.image}}">
            {{user.firstName}} {{user.lastName}}
          </div>
        </div>
        <div class="card-action center-align">
          <a class="btn grey" href="/devtools/show/{{id}}">Read More</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No devtools found</p>
  {{/each}}
</div>
