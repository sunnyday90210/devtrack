<div class="row">
  <div class="col s12 m8">
    <h3>{{devtools.title}}
      <small>{{{editIcon devtools.user.id user.id devtools.id false}}}</small>
    </h3>
    <div class="card devtools">
      <div class="card-content">
        <span class="card-title">{{formatDate devtools.date 'MMMM Do YYYY'}}</span>
        {{{devtools.body}}}
      </div>
    </div>
    {{#if devtools.allowComments}}
      <div class="card">
        <div class="card-content">
          <span class="card-title">Comments</span>
          {{#if user}}
            <form method="post" action="/devtools/comment/{{devtools.id}}">
              <div class="input-field">
                <textarea name="commentBody" class="materialize-textarea"></textarea>
                <label>Add Comment</label>
              </div>
              <input type="submit" value="Submit" class="btn">
            </form>
          {{else}}
            <p>Please <a href="/auth/google">Log</a> in to leave a comment</p>
          {{/if}}
        </div>
      </div>
      {{#each devtools.comments}}
        <div class="card">
          <div class="card-content">
            <h5>{{commentBody}}</h5>
            <div class="chip">
              <img src="{{commentUser.image}}"> <a href="/devtools/user/{{commentUser.id}}">{{commentUser.firstName}} {{commentUser.lastName}}</a>
            </div>
            <br>
            <small>Posted: {{formatDate commentDate 'MMMM Do YYYY'}}</small>
          </div>
        </div>
        {{/each}}
    {{/if}}
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{devtools.user.firstName}} {{devtools.user.lastName}}</span>
        <img src="{{devtools.user.image}}" class="circle responsive-img">
      </div>
      <div class="card-action">
        <a href="/devtools/user/{{devtools.user.id}}">More DevTools from {{devtools.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>
