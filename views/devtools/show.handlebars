<div class="row">
  <div class="col s12 m8">
    <h3>{{devtools.title}}</h3>
    <div class="card devtools">
      <div class="card-content">
        <span class="card-title">{{formatDate devtools.date 'MMMM Do YYYY'}}</span>
        {{{devtools.body}}}
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{devtools.user.firstName}} {{devtools.user.lastName}}</span>
        <img src="{{devtools.user.image}}" class="circle responsive-img">
      </div>
      <div class="card-action">
        <a href="/devtools/user/{{devtools.user.id}}">More DevTools from {{devtools.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>