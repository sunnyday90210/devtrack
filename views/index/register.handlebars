<div class="valign-wrapper row login-form">
  <div class="col card hoverable s10 pull-s1 m6 pull-m3 l4 pull-l4">
    <form>
      <div class="card-content">
        <span class="card-title">Create Account</span>
        <div class="row">
          <div class="input-field col s12">
            <label for="name">Name</label>
            <input type="text" name="name" required/>
          </div>
          <div class="input-field col s12">
            <label for="email">Email address</label>
            <input type="email" name="email" required/>
          </div>
          <div class="input-field col s12">
            <label for="password">Password</label>
            <input type="password" name="password" required/>
          </div>
          <div class="input-field col s12">
            <label for="password2">Confirm Password</label>
            <input type="password" name="password2" required/>
          </div>
        </div>
      </div>
      <div class="card-action center-align">
        <input type="submit" class="btn green waves-effect waves-light" value="Create Account">
      </div>
    </form>
    <p class="small center-align">
      <a href="./login">Login</a> if you already have an account</p>
  </div>
</div>